{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@siena-agent": [
        "src/siena-agent/index.ts"
      ],
      "@siena-lib/*": [
        "src/siena-agent/lib/*"
      ],
      "@siena-brain/*": [
        "src/siena-agent/brain/*"
      ],
      "@siena-brain": [
        "src/siena-agent/brain/index.ts"
      ],
      "@siena-memory/*": [
        "src/siena-agent/brain/memory/*"
      ],
      "@siena-memory": [
        "src/siena-agent/brain/memory/index.ts"
      ],
      "@siena-thought/*": [
        "src/siena-agent/brain/thought/*"
      ],
      "@siena-thought": [
        "src/siena-agent/brain/thought/index.ts"
      ],
      "@siena-language-semantics/*": [
        "src/siena-agent/brain/language/semantics/*"
      ],
      "@siena-language/*": [
        "src/siena-agent/brain/language/*"
      ],
      "@siena-language": [
        "src/siena-agent/brain/language/index.ts"
      ],
    },
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}